###################
# emoji define
###################
EMJ_YES_SMALL_="\xe2\x9c\x93"
EMJ_YES_="\xe2\x9c\x94"
EMJ_NO_SMALL_="\xe2\x9c\x97"
EMJ_NO_="\xe2\x9c\x98"
EMJ_RIGHT_ARROW="\xe2\x9e\xa1"
EMJ_8="\x38\xE2\x83\xA3"
EMJ_9="\x39\xE2\x83\xA3"
EMJ_7="\x37\xE2\x83\xA3"
EMJ_6="\x36\xE2\x83\xA3"
EMJ_1="\x31\xE2\x83\xA3"
EMJ_0="\x30\xE2\x83\xA3"
EMJ_2="\x32\xE2\x83\xA3"
EMJ_3="\x33\xE2\x83\xA3"
EMJ_5="\x35\xE2\x83\xA3"
EMJ_4="\x34\xE2\x83\xA3"
EMJ_sl="\x23\xE2\x83\xA3"
EMJ_TM="\xE2\x84\xA2"
EMJ_I="\xE2\x84\xB9"
EMJ_M="\xE2\x93\x82"


###################
# Color config
###################
# \033[ : esc ascii
# : font width
# : fgcolor 3x
# : bgcolor 4x
# : m
##############################################
# x in : 
##############################################
# 0 (black)
# 1 (red)
# 2 (green) 
# 3 (yellow)
# 4 (blue)
# 5 (Magenta,洋红)
# 6 (cyan,青色)
# 7 (white)
##############################################

COLOR_BRIGHT_WHITE="\033[1;97m"

COLOR_BOLD_RED="\033[1;31m"
COLOR_RED="\033[0;31m"

COLOR_BOLD_GREEN="\033[1;32m"
COLOR_GREEN="\033[0;32m"

COLOR_BOLD_YELLOW="\033[1;33m"
COLOR_YELLOW="\033[0;33m"

COLOR_BOLD_BLUE="\033[1;34m"
COLOR_BLUE="\033[0;34m"

COLOR_BOLD_MAG="\033[1;35m"
COLOR_MAG="\033[0;35m"

COLOR_BOLD_CYAN="\033[1;36m"
COLOR_CYAN="\033[0;36m"

COLOR_BOLD_WHITE="\033[1;37m"
COLOR_WHITE="\033[0;37m"

COLOR_DEF="\033[0m"


# green  Yes.
EMJ_BOLD_GREEN_YES_="${COLOR_BOLD_GREEN}${EMJ_YES_}${COLOR_DEF}"
EMJ_GREEN_YES_="${COLOR_GREEN}${EMJ_YES_}${COLOR_DEF}"
EMJ_BOLD_GREEN_YES_SMALL_="${COLOR_BOLD_GREEN}${EMJ_YES_SMALL_}${COLOR_DEF}"
EMJ_GREEN_YES_SMALL_="${COLOR_GREEN}${EMJ_YES_SMALL_}${COLOR_DEF}"

# red Yes.
EMJ_BOLD_RED_YES_="${COLOR_BOLD_RED}${EMJ_YES_}${COLOR_DEF}"
EMJ_RED_YES_="${COLOR_RED}${EMJ_YES_}${COLOR_DEF}"
EMJ_BOLD_RED_YES_SMALL_="${COLOR_BOLD_RED}${EMJ_YES_SMALL_}${COLOR_DEF}"
EMJ_RED_YES_SMALL_="${COLOR_RED}${EMJ_YES_SMALL_}${COLOR_DEF}"

# red No.
EMJ_GREEN_NO_="${COLOR_GREEN}${EMJ_NO_}${COLOR_DEF}"
EMJ_GREEN_NO_SMALL_="${COLOR_GREEN}${EMJ_NO_SMALL_}${COLOR_DEF}"
EMJ_BOLD_GREEN_NO_="${COLOR_BOLD_GREEN}${EMJ_NO_}${COLOR_DEF}"
EMJ_BOLD_GREEN_NO_SMALL_="${COLOR_BOLD_GREEN}${EMJ_NO_SMALL_}${COLOR_DEF}"

# red No.
EMJ_RED_NO_="${COLOR_RED}${EMJ_NO_}${COLOR_DEF}"
EMJ_RED_NO_SMALL_="${COLOR_RED}${EMJ_NO_SMALL_}${COLOR_DEF}"
EMJ_BOLD_RED_NO_="${COLOR_BOLD_RED}${EMJ_NO_}${COLOR_DEF}"
EMJ_BOLD_RED_NO_SMALL_="${COLOR_BOLD_RED}${EMJ_NO_SMALL_}${COLOR_DEF}"

EMJ_YELLOW_YES_="${COLOR_YELLOW}${EMJ_YES_}${COLOR_DEF}"
EMJ_CYAN_YES_="${COLOR_CYAN}${EMJ_YES_}${COLOR_DEF}"
EMJ_BLUE_YES_="${COLOR_BLUE}${EMJ_YES_}${COLOR_DEF}"
EMJ_MAG_YES_="${COLOR_MAG}${EMJ_YES_}${COLOR_DEF}"

